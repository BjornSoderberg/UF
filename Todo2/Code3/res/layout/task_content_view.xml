<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="146dp"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/descET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:visibility="gone" >
        </EditText>

        <Button
            android:id="@+id/saveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:visibility="gone" />

        <TextView
            android:id="@+id/descTV"
            android:layout_width="match_parent"
            android:layout_height="102dp"
            android:hint="Tap to write a description" />

        <EditText
            android:id="@+id/focusDummy"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:ems="10"
            android:inputType="textMultiLine"
            android:visibility="gone" >

            <requestFocus />
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/dueButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Set due date" />

                <Button
                    android:id="@+id/clearDue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Remove due date" />

                <Button
                    android:id="@+id/reminderButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Set reminder" />

                <Button
                    android:id="@+id/clearReminder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Remove reminder" />

                <Button
                    android:id="@+id/repeatingMWF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Remind each minute :O" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <CheckBox
                        android:id="@+id/cbM"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="M"
                        android:textColor="#000000" />

                    <CheckBox
                        android:id="@+id/cbTu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tu"
                        android:textColor="#000000" />

                    <CheckBox
                        android:id="@+id/cbW"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="W"
                        android:textColor="#000000" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <CheckBox
                        android:id="@+id/cbTh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Th"
                        android:textColor="#000000" />

                    <CheckBox
                        android:id="@+id/cbF"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="F"
                        android:textColor="#000000" />

                    <CheckBox
                        android:id="@+id/cbSa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sa"
                        android:textColor="#000000" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <CheckBox
                        android:id="@+id/cbSu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Su"
                        android:textColor="#000000" >
                    </CheckBox>
                </LinearLayout>

                <Button
                    android:id="@+id/setWeeklyReminder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Set weekly reminder" />

                <Button
                    android:id="@+id/setEveryTwoWeeksReminder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Set reminder every two weeks" />

                <CheckBox
                    android:id="@+id/cbEven"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Even weeks?"
                    android:textColor="#000000" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <EditText
                        android:id="@+id/dayOfMonth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="number" />

                    <Button
                        android:id="@+id/monthlyReminder"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Monthly" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>