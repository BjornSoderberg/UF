<?xml version="1.0" encoding="utf-8"?>
<com.todo.code3.xml.Wrapper xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bigWrapper"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#bbbbbb"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#35ADCF"
        android:orientation="horizontal" />

    <LinearLayout
        android:id="@+id/l"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal" >

        <FrameLayout
            android:id="@+id/dragButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:onClick="toggleMenu" >

            <ImageView
                android:id="@+id/icon"
                android:layout_width="@dimen/item_image_width"
                android:layout_height="@dimen/item_image_height"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/menu" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/backButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:onClick="goBack"
            android:visibility="gone" >

            <ImageView
                android:id="@id/icon"
                android:layout_width="@dimen/item_image_width"
                android:layout_height="@dimen/item_image_height"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/plus" />
        </FrameLayout>
    </LinearLayout>

    <!-- Border lines for buttons -->

    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="2px"
        android:layout_height="40dp"
        android:layout_alignRight="@+id/l"
        android:background="#298DA9"
        android:enabled="false"
        android:orientation="horizontal" />

    <LinearLayout
        android:id="@+id/line2"
        android:layout_width="2px"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/addButton"
        android:background="#298DA9"
        android:enabled="false"
        android:orientation="horizontal" />
    <!-- End of border lines for buttons -->

    <FrameLayout
        android:id="@+id/addButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:onClick="viewAddTaskDialog" >

        <ImageView
            android:id="@id/icon"
            android:layout_width="@dimen/item_image_width"
            android:layout_height="@dimen/item_image_height"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:src="@drawable/plus" />
    </FrameLayout>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/barBorder"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Folder"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff" />

    <LinearLayout
        android:id="@+id/barBorder"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_below="@+id/topBar"
        android:background="#298DA9"
        android:orientation="horizontal" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/wrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomBar"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/barBorder"
        android:background="#cccccc"
        android:orientation="horizontal" >
    </LinearLayout>

    <!-- Start of options bar -->

    <com.todo.code3.xml.OptionsBar
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="#35ADCF"
        android:orientation="horizontal"
        android:visibility="gone" >
    </com.todo.code3.xml.OptionsBar>

</com.todo.code3.xml.Wrapper>