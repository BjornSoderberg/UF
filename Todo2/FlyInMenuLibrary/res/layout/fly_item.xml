<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/item_height"
              android:orientation="horizontal"
              android:background="@color/rbm_menu_background"
              android:paddingTop="@dimen/item_padding_topbottom"
              android:paddingBottom="@dimen/item_padding_topbottom"
              android:paddingLeft="@dimen/item_padding_leftright"
              android:paddingRight="@dimen/item_padding_leftright">

    <ImageView
            android:id="@+id/rbm_item_icon"
            android:layout_height="@dimen/item_image_height"
            android:layout_width="@dimen/item_image_width"
            android:scaleType="fitCenter"
            />

    <TextView
            android:id="@+id/rbm_item_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/item_text_size"
            android:textColor="@color/rbm_item_text_color"
            android:layout_gravity="center_vertical"
            android:paddingLeft="@dimen/item_text_padding_left"
            android:singleLine="true"
            android:ellipsize="end"/>


</LinearLayout>